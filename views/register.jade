extends layout
block content
	.container   
		.row
			.col.s4#side_bar
			.col.s8
				form#registration-form(action='', method="post", enctype="multipart/form-data")
					h4 Register
					p
					.row
						.col.s12
							.row
								.input-field.col.s6
									input#first_name.validate(type='text')
									label(for='first_name') First Name
								.input-field.col.s6
									input#last_name.validate(type='text')
									label(for='last_name') Last Name
								.input-field.col.s6
									input#user_name.validate(type='text')
									label(for='user_name') Userame
								.input-field.col.s12
									input#email.validate(placeholder='user@domain.com', type='email')
									label(for='email') Email
								.input-field.col.12
									input#password.validate(type='password')
									label(for='password') Password
								.input-field.col.s12
									input#password_2.validate(type='password')
									label(for='password_2') Repeat Password
								input.btn.waves-effect.waves-light(type='submit', name='submit')