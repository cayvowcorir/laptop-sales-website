		// <link rel="stylesheet" type="text/css" href="bower_components/bootstrap/dist/css/bootstrap-theme.css">
		link(rel='stylesheet', type='text/css', href='/stylesheets/app.css')
		link(type='text/css', rel='stylesheet', href='/stylesheets/materialize.min.css', media='screen,projection')
		// HTML5 shim, for IE6-8 support of HTML5 elements
		//if lt IE 9
			script(src='js/html5shiv.js')
		// Fav and touch icons
		link(rel='apple-touch-icon-precomposed', sizes='144x144', href='images/apple-touch-icon-144-precomposed.png')
		link(rel='apple-touch-icon-precomposed', sizes='114x114', href='images/apple-touch-icon-114-precomposed.png')
		link(rel='apple-touch-icon-precomposed', sizes='72x72', href='images/apple-touch-icon-72-precomposed.png')
		link(rel='apple-touch-icon-precomposed', href='images/apple-touch-icon-57-precomposed.png')
		link(rel='shortcut icon', href='images/favicon.png')
		script(src='/jquery.js', type='text/javascript')
		//script(src='/angular.js', type='text/javascript')
		script(src='/bootstrap.js', type='text/javascript')
		script(src='/javascripts/controllers.js', type='text/javascript')
		script(src='/javascripts/directives.js', type='text/javascript')
		script(src='/javascripts/filters.js', type='text/javascript')
		script(src='/javascripts/services.js', type='text/javascript')
		script(type='text/javascript', src='/javascripts/materialize.min.js')
		script.
			$(document).ready(function(){
				$('.modal-trigger').leanModal();
			});
	body(ng-controller='lapsalesCtrl')
		block header
			.row
				.s12
					nav#nav_bar
						.nav-wrapper
							.brand-logo(href='#') Laptop Sales
							ul#nav-mobile.right.hide-on-med-and-down
								li
									a#login.modal-trigger.waves-effect.waves-light.btn(href='#login-form-modal') Login
								li
									a#register(href='/users/new') REGISTER               
			form#login-form-modal.modal.modal-fixed-footer(action='/users')
				.modal-content
					h4 Login
					p
					.row
						.col.s12
							.row
								.input-field.col.s12
									input#email.validate(placeholder='user@domain.com', type='email')
									label(for='email') Email
								.input-field.col.s12
									input#password.validate(type='password')
									label(for='password') Password
				.modal-footer
					button.btn.waves-effect.waves-light(type='submit', name='submit') Submit
					a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Cancel

			

	block content
	